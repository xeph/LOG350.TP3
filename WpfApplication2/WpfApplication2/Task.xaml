<Window x:Class="WpfApplication2.Task"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="ToDo.Any - Tâche" Height="550" Width="650" Icon="Images/notebook.ico">
    <Grid>
        <Grid.Resources>
            <x:Array Type="{x:Type MenuItem}" x:Key="genericContextMenuItems">
                <MenuItem Header="Ajouter" Click="ContextualMenuAdd_Click" >
                    <MenuItem.Icon>
                        <Image Source="Images/add.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Modifier" Click="ContextualMenuModify_Click" >
                    <MenuItem.Icon>
                        <Image Source="Images/edit.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Supprimer" Click="ContextualMenuDelete_Click" >
                    <MenuItem.Icon>
                        <Image Source="Images/delete.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </x:Array>
            <ContextMenu x:Key="genericContextMenu">
                <ContextMenu.ItemsSource>
                    <CompositeCollection>
                        <CollectionContainer Collection="{StaticResource genericContextMenuItems}" />
                    </CompositeCollection>
                </ContextMenu.ItemsSource>
            </ContextMenu>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="34" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Nom:" />
            <Label Grid.Row="1" Grid.Column="0" Content="Echéance:" />
            <Label Grid.Row="2" Grid.Column="0" Content="Priorité:" />
            <Label Grid.Row="3" Grid.Column="0" Content="Complétion:" />
            <Label Grid.Row="4" Grid.Column="0" Content="Tags:" />
            <Label Grid.Row="5" Grid.Column="0" Content="Description:" />
            <TextBox Grid.Row="0" Grid.Column="1" Name="txtName" />
            <DatePicker Grid.Row="1" Grid.Column="1" Name="dtpDueDate" />
            <ComboBox Grid.Row="2" Grid.Column="1" Name="cbPriority" />
            <ComboBox Grid.Row="3" Grid.Column="1" Name="cbCompletion" />
            <TextBox Grid.Row="4" Grid.Column="1" Name="txtTags" />
            <TextBox Grid.Row="5" Grid.Column="1" Name="txtDescription" />
        </Grid>
        <GroupBox Grid.Row="1" Header="Alertes">
            <DataGrid Name="dgAlerts" ContextMenu="{StaticResource genericContextMenu}" Initialized="DataGridAlerts_Initialized" />
        </GroupBox>
        <GroupBox Grid.Row="2" Header="Sous-tâches">
            <DataGrid Name="dgSubTasks" ContextMenu="{StaticResource genericContextMenu}" Initialized="DataGridSubTasks_Initialized" />
        </GroupBox>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnSave" Margin="4" Content="Enregistrer" Click="SaveButton_Click" />
            <Button Name="btnCancel" Margin="4" Content="Annuler" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>