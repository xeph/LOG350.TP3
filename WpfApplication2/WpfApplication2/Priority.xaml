<Window x:Class="WpfApplication2.Priority"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Priorités" Height="300" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="34" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Name="dgPriorities" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnSave" Margin="4" Content="Enregistrer" />
            <Button Name="btnCancel" Margin="4" Content="Annuler" />
        </StackPanel>
    </Grid>
</Window>
